{
  "manifest_version": 3,
  "name": "Floating Counter",
  "version": "1.3",
  "description": "A floating unit counter popup, draggable, supports cross-day session.",
  "permissions": [
    "storage",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
